manifest {
	name						= 'CRISPR-BEdiscovered'
	version 					= '0.0.0'
	description					= 'CRISPR gRNA determination, mutation prediction and annotation'
	author						= 'Vincent Chapdelaine, Daniel Taliun & Raquel Cuella-Martin'
	mainScript					= 'main.nf'
}

nextflow {
    // Disable internet access for resolving dependencies
    enableCapsule = false
}

capsule {
    // Set the capsule cache to use offline dependencies
    cacheDir = "$HOME/.nextflow/capsule"
}


params {
	//Requiered inputs
	project						= null
	protein_id					= null
	protein_Pos					= null
	protein_Neg					= null
	MANE						= null
	GC						= null
	remove_empty					= false
	genome						= 'hg38'
	border						= '30'
	Editors						= 'FNLS 3 8 C T'
	index_dir					= "" // Directory Of index
	feature						= 'CDS' // Which features to select (future implementation)
	casName						= null
	CFD_Threshold					= null
	CFD_Count					= null
	CFD_files					= "" // Contains RDA and Pickle mismatch/PAM dataset
	Gen_pipeline_data				= ""  // Directory containing genomes (described in install_new_genome)
	VEP_dir						= "" // Directory containing vep.sif and vep_cache
	protein_Pos_default				= "" // empty file (nextflow by pass)
	protein_Neg_default				= "" // empty file (nextflow by pass)
        Python_env                                      = "" // path to python environment's activate file
        R_temporary_dir				        = "" // Path to a temporary dir necessary for unknown number of user and usage

	//Outputs
	output						= 'default'
	outdir						= ''
	Libraries					= "Libraries"
	Auxiliary_files					= "Auxiliary_files"
	Report_output					= "Report_output"
	Report_ancillary				= "Report_ancillary"
	Errors						= "Errors"
	Library_Type					= ''

}


includeConfig 'conf/base.config'
